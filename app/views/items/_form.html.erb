<%= form_with(model: item) do |form| %> <% if item.errors.any? %>
<div style="color: red">
  <ul>
    <% item.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= form.label :description %> <%= form.text_area :description, class: "block
  border border-grey-light w-full p-3 rounded mb-4" %>
</div>
<div><%= form.submit %></div>
<% end %>
